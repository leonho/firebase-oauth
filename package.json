{
  "name": "oauth2server-firebase",
  "version": "1.0.12",
  "description": "This library provides OAuth2 server implementation for Firebase",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "tslint -p .",
    "format": "yarn internal:prettier --write",
    "internal:prettier": "prettier \"./*.{js,json,md,ts,ejs}\" \"./src/**/*.{js,json,md,ts,ejs}\"",
    "clean": "rm -rf dist",
    "clean:pack": "rm -f *.tgz",
    "build": "tsc",
    "build:watch": "tsc -w",
    "version": "tsc --version",
    "build:clean": "yarn clean:pack && yarn clean && yarn build",
    "package": "yarn build:clean && yarn pack",
    "release": "yarn build:clean && yarn publish"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:Instant-Teams/firebase-oauth2-npm-package.git"
  },
  "author": "Rich Kevan",
  "license": "Apache-2.0",
  "dependencies": {
    "axios": "^1.4.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "oauth2-nodejs": "^0.2.0",
    "randomstring": "^1.3.0",
    "secure-random-string": "^1.1.3"
  },
  "devDependencies": {
    "@firebase/app-types": "^0.9.0",
    "@types/ejs": "^3.1.2",
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.2",
    "firebase-admin": "^11.10.1",
    "firebase-functions": "^4.4.1",
    "prettier": "^3.0.0",
    "tsc": "^2.0.4",
    "tslint": "^6.1.3",
    "typescript": "^5.1.6"
  },
  "peerDependencies": {
    "firebase-admin": "^11.10.1",
    "firebase-functions": "^4.4.1"
  }
}
